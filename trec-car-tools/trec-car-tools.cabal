name:                trec-car-tools
version:             0.1.0.0
synopsis:            Wikimedia annotator project
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Ben Gamari
maintainer:          ben@smart-cactus.org
copyright:           (c) 2017 Ben Gamari and Laura Dietz
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  reexported-modules:  CAR.Types,
                       CAR.Types.Provenance,
                       CAR.Types.AST,
                       CAR.Types.AST.Pretty,
                       CAR.Types.CborList,
                       CAR.Types.Files
  exposed-modules:     CAR.RunFile
                       CAR.AnnotationsFile
                       CAR.NameToIdMap
                       CAR.CarExports
                       CAR.QRelFile
                       CAR.Retrieve
  default-language:    Haskell2010
  ghc-options:         -Wall
  hs-source-dirs:      src
  build-depends:       base,
                       aeson >= 1.0,
                       binary,
                       cborg,
                       cborg-json,
                       lens,
                       serialise >= 0.1,
                       bytestring >= 0.10,
                       deepseq,
                       deepseq,
                       filepath >=1.4 && <1.5,
                       unordered-containers >=0.2 && <0.3,
                       containers,
                       snowball >= 1.0 && <1.1,
                       charset >=0.3 && <0.4,
                       log-domain,
                       foldl,
                       network-uri,
                       dlist,
                       vector,
                       vector-algorithms,
                       hashable >= 1.2,
                       base16-bytestring >= 0.1,
                       cryptohash-sha1,
                       text,
                       text-short,
                       regex-compat,
                       simplir,
                       simplir-io,
                       simplir-stop-words,
                       optparse-applicative,
                       trec-car-types

executable trec-car-cat
  main-is:             Cat.hs
  other-extensions:    DeriveGeneric, TypeApplications, RecordWildCards, ViewPatterns, OverloadedStrings, RankNTypes, ScopedTypeVariables, GADTs, TemplateHaskell, GeneralizedNewtypeDeriving, QuasiQuotes, StandaloneDeriving, BangPatterns
  ghc-options:         -Wall
  build-depends:       base,
                       serialise,
                       bytestring >= 0.10,
                       unordered-containers,
                       optparse-applicative,
                       text,
                       trec-car-tools,
                       trec-car-types
  default-language:    Haskell2010

executable trec-car-build-toc
  main-is:             BuildToc.hs
  other-extensions:    DeriveGeneric, TypeApplications, RecordWildCards, ViewPatterns, OverloadedStrings, RankNTypes, ScopedTypeVariables, GADTs, TemplateHaskell, GeneralizedNewtypeDeriving, QuasiQuotes, StandaloneDeriving, BangPatterns
  ghc-options:         -Wall
  build-depends:       base,
                       aeson >= 1.0,
                       binary,
                       serialise,
                       bytestring >= 0.10,
                       containers,
                       text,
                       trec-car-tools,
                       trec-car-types,
                       optparse-applicative
  default-language:    Haskell2010


